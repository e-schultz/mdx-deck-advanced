{
    "private": true,
    "name": "variables-deck",
    "version": "1.0.0",
    "scripts": {
      "start": "mdx-deck deck.js",
      "build": "yarn run now-build",
      "build:presentation": "mdx-deck build index.js --no-html ",
      "build:images": "cp -r images dist/",
      "build:assets": "cp -r snippets dist/",
      "now-build": "yarn run build:presentation && yarn run build:images && yarn run build:assets && yarn run build:dist",
      "build:dist": "cpy 'dist/**' ../../dist/decks/variables",
      "deploy": "now"
    }
  }
  