{
  "private": true,
  "workspaces": ["decks/*"],
  "scripts": {
    "start": "mdx-deck deck.js",
    "build": "",
    "build:arrays": "mdx-deck build decks/arrays/index.js -d dist/arrays --no-html",
    "build:functions": "mdx-deck build decks/functions/index.js -d dist/functions --no-html",
    "build:objects": "mdx-deck build decks/objects/index.js -d dist/objects --no-html",
    "build:promises": "mdx-deck build decks/promises/index.js -d dist/promises --no-html",
    "build:react": "mdx-deck build decks/react/index.js -d dist/react --no-html",
    "build:templates": "mdx-deck build decks/template-literals/index.js -d dist/template-literals --no-html",
    "build:variables": "mdx-deck build decks/variables/index.js -d dist/variables --no-html",
    "build:presentation": "yarn run build:arrays && yarn run build:functions && yarn run build:objects && yarn run build:react && yarn run build:templates && yarn run build:variables && yarn run build:promises",
    "build:images": "cp -r images dist/",
    "build:assets": "cp -r snippets dist/",
    "now-build": "yarn run build:presentation && yarn run build:images && yarn run build:assets",
    "deploy": "now",
    "docz:dev": "docz dev",
    "docz:build": "docz build"
  },
  "devDependencies": {
    "ajv": "6.8.1",
    "mdx-deck": "1.8.2",
    "mdx-deck-code-surfer": "0.5.5",
    "raw-loader": "1.0.0",
    "prism-react-renderer": "^0.1.6",
    "react-codesandboxer": "^3.1.3",
    "react-live": "^1.12.0",
    "unified-ui": "0.0.3"
  },
  "dependencies": {
    "docz": "^0.13.7",
    "docz-theme-default": "^0.13.7",
    "mdx-code": "^1.1.3",
    "mdx-deck-live-code": "^1.0.1",
    "react-syntax-highlighter": "^10.1.3"
  }
}
